@{
    dynamic shapeFactory = WorkContext.Resolve<Orchard.DisplayManagement.IShapeFactory>();
    
    var okButtonShape = shapeFactory.Lombiq_Modal_Button(
        ButtonText: Model.ButtonText as string ?? T("OK").Text,
        CssClasses: "modalOkButton",
        Trigger: "confirm");
}

@Display.Lombiq_Modal(
    Id: Model.Id,
    BlockName: Model.BlockName,
    Title: Model.Title,
    Header: Model.Header,
    Body: Model.Body,
    CloseOnEscape: Model.CloseOnEscape,
    AutoOpen: Model.AutoOpen,
    ButtonShapes: new[] { okButtonShape })