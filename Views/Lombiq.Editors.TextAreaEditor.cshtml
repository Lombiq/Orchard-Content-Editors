@using Lombiq.ContentEditors.ViewModels

@{
    var viewModel = Model.ViewModel as TextAreaEditorViewModel;

    switch (viewModel.Flavor)
    {
        case TextAreaEditorFlavors.Default:
            @Display.Lombiq_Editors_TextAreaEditor_Default(ViewModel: viewModel)
            break;
        case TextAreaEditorFlavors.TinyMce:
            @Display.Lombiq_Editors_TextAreaEditor_TinyMce(ViewModel: viewModel)
            break;
        default:
            break;
    }
}