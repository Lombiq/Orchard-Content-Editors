@{
    var buttonText = Model.ButtonText as string ?? T("OK").Text;
    var cssClasses = Model.CssClasses as string ?? "";
    var trigger = Model.Trigger as string ?? "";
}

{
    text: "@buttonText",
    "class": "modalButton @cssClasses",
    click: function () {
        var $self = $(this);

        @if (!string.IsNullOrEmpty(trigger))
        { 
            @:$self.trigger("@trigger", [$self.data("context")]);
        }

        $self.dialog("close");
    }
}