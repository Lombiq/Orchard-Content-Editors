@using Lombiq.ContentEditors.ViewModels

@model PropertyEditorViewModel

@Display.Lombiq_Editors_TextBoxEditor(ViewModel: 
    new EditorViewModel
    {
        Name = Model.PropertyName,
        Hint = Model.Hint,
        Value = Model.Value,
        Label = Model.Label,
        Placeholder = Model.Placeholder,
        Required = Model.Required
    })