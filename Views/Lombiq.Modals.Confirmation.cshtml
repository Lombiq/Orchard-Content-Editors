@{
    dynamic shapeFactory = WorkContext.Resolve<Orchard.DisplayManagement.IShapeFactory>();
    
    var okButtonShape = shapeFactory.Lombiq_Modal_Button(
        ButtonText: Model.OkButtonText as string ?? T("OK").Text,
        CssClasses: "modalOkButton",
        Trigger: "confirm");
    var cancelButtonShape = shapeFactory.Lombiq_Modal_Button(
        ButtonText: Model.CancelButtonText as string ?? T("Cancel").Text,
        CssClasses: "modalCancelButton");
}

@Display.Lombiq_Modal(
    Id: Model.Id,
    BlockName: Model.BlockName,
    Title: Model.Title,
    Header: Model.Header,
    Body: Model.Body,
    ButtonShapes: new[] { okButtonShape, cancelButtonShape })