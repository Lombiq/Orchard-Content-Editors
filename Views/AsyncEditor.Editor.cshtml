<script type="text/x-template" id="async-editor-template">
    <div class="asyncEditor">
        <div class="asyncEditor__header"></div>
        <div class="asyncEditor__messages">
            <div class="asyncEditor__error" v-if="errorText">{{ errorText }}</div>
        </div>
        <div class="asyncEditor__main">
            <form ref="editorForm" class="asyncEditor__form">
                @Html.AntiForgeryToken()
                <div class="asyncEditor__form" v-html="editorHtml"></div>
            </form>
        </div>
        <div class="asyncEditor__footer">
            <div class="asyncEditor__groupLinks">
                <div v-for="group in editorGroups"
                     :key="group.name"
                     class="asyncEditor__groupLink"
                     :class="{ 'asyncEditor__groupLink_disabled': !group.isAccessible, 'asyncEditor__groupLink_active': isCurrentGroup(group.name) }"
                     @@click="group.isAccessible && !isCurrentGroup(group.name) ? submitEditor(group.name) : null">
                        {{ group.displayText }}
                     </div>
            </div>
            <div class="asyncEditor__actions">
                <div class="asyncEditor__saveAction" v-if="!isLastGroup()" @@click="submitEditor()">@T["Save"]</div>
                <div class="asyncEditor__saveAndNextAction" v-if="!isLastGroup()" @@click="submitEditor(getNextEditor())">@T["Save and Next"]</div>
                <div class="asyncEditor__submitAction" v-if="isLastGroup()">@T["Submit"]</div>
            </div>
        </div>
    </div>
</script>
