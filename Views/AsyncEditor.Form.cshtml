@using Lombiq.EditorGroups.Constants

@{
    var editorShape = Model.EditorShape;
    if (editorShape == null)
    {
        return;
    }

    var contentItemId = Model.ContentItemId as int?;
    var group = Model.Group as string;
    var contentType = Model.ContentType as string;
}

@using (Html.BeginFormAntiForgeryPost(
    Url.Action("EditGroup", "AsyncEditorGroup", new { Area = "Lombiq.EditorGroups", ContentItemId = contentItemId, Group = group, ContentType = contentType }),
    FormMethod.Post,
    new { @class = ElementNames.AsyncEditorForm.BlockName }))
{
    @Display(editorShape)
}