@{
    var contentItem = Model.ContentItem as ContentItem;
    if (contentItem == null)
    {
        return;
    }

    var asyncEditorPart = contentItem.As<AsyncEditorPart>();
    if (asyncEditorPart == null || !asyncEditorPart.IsAsyncEditorContext)
    {
        return;
    }
}

<div class="asyncEditorActions">
    @Display.AsyncEditor_Actions_Previous(ContentItem: Model.ContentItem)

    @Display.AsyncEditor_Actions_GroupList(ContentItem: Model.ContentItem)

    @Display.AsyncEditor_Actions_Submit(ContentItem: Model.ContentItem)
</div>